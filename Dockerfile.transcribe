FROM python:3.13-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    libpq-dev \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy project files
COPY pyproject.toml uv.lock ./
COPY README.md ./
COPY conduit_transcripts/ ./conduit_transcripts/
COPY apps/ ./apps/
COPY cli/ ./cli/

# Install uv and Python dependencies
RUN pip install uv
RUN uv sync --frozen

# Create non-root user
RUN useradd -m -u 1000 appuser
RUN chown -R appuser:appuser /app
USER appuser

# Expose port
EXPOSE 8000

# Default command
CMD ["uv", "run", "python", "-m", "apps.transcribe.main"]