# Environment variables for Docker Compose setup
# Copy this file to .env.docker and customize as needed

# PostgreSQL Configuration
POSTGRES_DB_NAME=transcripts
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_VECTOR_DB_NAME=vector_chunks

# MCP Server Configuration
MCP_PORT=8000

# Note: When running with docker-compose, the connection string will be:
# postgresql://postgres:your_secure_password_here@postgres:5432/transcripts

# SET TRANSCRIPTION TOOL TO MLX (faster but not great with docker) or WHISPER
TRANSCRIBE_PREFER_MLX=false
