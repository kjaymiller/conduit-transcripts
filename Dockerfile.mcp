# Dockerfile for MCP server
FROM python:3.12-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    && rm -rf /var/lib/apt/lists/*

# Install uv for fast dependency management
COPY --from=ghcr.io/astral-sh/uv:latest /uv /usr/local/bin/uv

# Copy dependency files
COPY pyproject.toml uv.lock ./

# Install dependencies using uv (including uvicorn for the server)
RUN uv sync --frozen --no-dev

# Copy source code
COPY src/ ./src/

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV PYTHONPATH=/app

# Expose MCP server port
EXPOSE 8000

# Default command - runs the MCP server
# Note: src/mcp_server.py needs to be implemented (see issue conduit-transcripts-ikr)
CMD ["uv", "run", "python", "-m", "uvicorn", "src.mcp_server:app", "--host", "0.0.0.0", "--port", "8000"]
